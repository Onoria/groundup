# ==========================================
# GROUNDUP SECURITY CONFIGURATION
# ==========================================
# Copy this file to .env.local for local development
# NEVER commit .env.local to git
# Store production values in Vercel environment variables

# ==========================================
# DATABASE
# ==========================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://username:password@localhost:5432/groundup?schema=public"

# Direct database URL (for Prisma migrations)
DIRECT_URL="postgresql://username:password@localhost:5432/groundup?schema=public"

# ==========================================
# AUTHENTICATION (CLERK)
# ==========================================
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxx"
CLERK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxx"

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/onboarding"

# ==========================================
# API SECURITY
# ==========================================
# Generate with: openssl rand -base64 32
API_SECRET_KEY="your-super-secret-api-key-here-generate-with-openssl"

# Rate limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes

# ==========================================
# ENCRYPTION
# ==========================================
# For encrypting sensitive user data
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="your-encryption-key-here-32-bytes-minimum"

# ==========================================
# EMAIL SERVICE
# ==========================================
# Using Resend for transactional emails
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="noreply@groundup.app"

# ==========================================
# PAYMENT PROCESSING (STRIPE)
# ==========================================
STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxx"
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxx"

# ==========================================
# AI/MATCHING (OPENAI)
# ==========================================
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxx"
OPENAI_MODEL="gpt-4-turbo-preview"

# ==========================================
# FILE STORAGE
# ==========================================
# For user profile images, documents, etc.
# Using Vercel Blob or AWS S3
BLOB_READ_WRITE_TOKEN="vercel_blob_xxxxxxxxxxxxxxxxxxxxx"

# ==========================================
# MONITORING & LOGGING
# ==========================================
# Error tracking with Sentry
NEXT_PUBLIC_SENTRY_DSN="https://xxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxxxxxxxxxx"
SENTRY_AUTH_TOKEN="xxxxxxxxxxxxxxxxxxxxx"

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID="G-XXXXXXXXXX"

# ==========================================
# SECURITY HEADERS
# ==========================================
# CSP nonce for inline scripts (auto-generated per request)
# These are configuration flags, not secrets
ENABLE_CSP="true"
ENABLE_HSTS="true"

# ==========================================
# ENVIRONMENT
# ==========================================
NODE_ENV="development" # or "production"
NEXT_PUBLIC_APP_URL="http://localhost:3000" # or "https://groundup.app"

# ==========================================
# WEBHOOKS
# ==========================================
# Webhook signing secrets for verifying incoming webhooks
CLERK_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxx"
GITHUB_WEBHOOK_SECRET="xxxxxxxxxxxxxxxxxxxxx" # For skill verification

# ==========================================
# BACKGROUND JOBS (if using)
# ==========================================
REDIS_URL="redis://localhost:6379"

# ==========================================
# THIRD-PARTY INTEGRATIONS
# ==========================================
# LinkedIn OAuth (for skill verification)
LINKEDIN_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxx"
LINKEDIN_CLIENT_SECRET="xxxxxxxxxxxxxxxxxxxxx"

# GitHub OAuth (for developer verification)
GITHUB_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxx"
GITHUB_CLIENT_SECRET="xxxxxxxxxxxxxxxxxxxxx"

# ==========================================
# LEGAL SERVICES
# ==========================================
# Integration with legal service provider
CLERKY_API_KEY="xxxxxxxxxxxxxxxxxxxxx" # or similar service
